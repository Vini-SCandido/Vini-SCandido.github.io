---
import { Image } from 'astro:assets'
import avatar from '../assets/avatar.png'
const { frontmatter } = Astro.props
---
<style>
  .author-card {
    display: flex;
    color: var(--color-text-gray);
  }

  .author-card-img img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
  }

  .author-card-img {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 50px;
    aspect-ratio: 1;
  }

  .author-card-text {
    display: flex;
    width: 100%;
    margin-left: 1rem;
    flex-direction: column;
    justify-content: center;
    gap: 9px;
  }

  .author-card-text p {
    margin: 0;
  }
</style>

<div class="author-card">
  <div class="author-card-img">
    <Image src={avatar} alt="knight" loading="eager" />
  </div>
  <div class="author-card-text">
    <p>Vinicius Souza</p>
    <p>{frontmatter.pubDate}</p>
  </div>
</div>