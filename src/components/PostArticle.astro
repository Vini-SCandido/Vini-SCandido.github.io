---
import PostHeader from "./PostHeader.astro";
const { frontmatter } = Astro.props
---
<style>
  .post-article {
    display: flex;
    justify-content: center;
    color: var(--color-text-gray);
  }

  .post-content {
    width: 80ch;
    line-height: 1.6rem;
    font-size: 1.1rem;
    text-align: justify;
  }

  .post-content img {
    display: block;
    margin: auto;
    width: 100%;
    height: auto;
  }

  @media screen and (max-width: 768px){
    .post-content {
      width: 100%;
    }
  }
</style>

<div class="post-article">
  <article class="roboto-slab-400">
    <PostHeader frontmatter={frontmatter}/>
    <div class="post-content">
      <slot />
    </div>
  </article>
</div>
