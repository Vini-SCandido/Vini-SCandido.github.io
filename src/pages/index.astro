---
import { Image } from "astro:assets";
import ArchiveFeed from "../components/ArchiveFeed.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/global.css";
import lion from "../assets/lion.jpg";
const data = {
  title: "Rumor Aleatório",
  description:
    "Dicas de leitura, cenários, idéias, relatos e regras da casa para seu RPG de mesa",
};
---

<style>
  .home-page-content {
    display: flex;
    justify-content: center;
    padding: 1rem;
    gap: 1rem;
  }

  .home-page-content h2 {
    margin: 0;
    color: var(--color-text-gray);
  }

  .home-page-intro {
    width: 35ch;
    padding: 1rem;
  }

  .home-page-intro p {
    text-align: justify;
    color: var(--color-text-gray);
  }

  .home-page-intro-img img {
    mix-blend-mode: luminosity;
    width: 100%;
    height: auto;
    transform: scale(1.2);
  }

  .home-page-intro-img {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: baseline;
    border-radius: 0.5rem;
    overflow: hidden;
    aspect-ratio: 2.5;
    margin: 0;
    margin-top: 1rem;
  }

  .home-page-aside {
    filter: brightness(0.9);
    margin: 0;
    margin-top: 1rem;
    border-radius: 0.5rem;
  }

  .home-page-aside h3 {
    margin-bottom: 1rem;
    color: var(--color-text-gray);
  }

  .home-page-aside li {
    margin: 0;
    margin-bottom: 0.4rem;
    color: var(--color-text-gray);
  }

  .home-page-latest-posts {
    padding: 1rem;
  }

  @media screen and (max-width: 768px) {
    .home-page-content {
      flex-direction: column;
    }

    .home-page-intro {
      width: 100%;
      padding: 0;
      margin-bottom: 1rem;
    }

    .home-page-latest-posts {
      padding: 0;
      margin-bottom: 1rem;
    }
  }
</style>
<BaseLayout data={data}>
  <div class="home-page-content">
    <div class="home-page-latest-posts">
      <section>
        <h2>Últimas Publicações</h2>
        <ArchiveFeed number="4" />
      </section>
    </div>
    <div class="home-page-intro">
      <section>
        <h2>Um Rumor, Por Favor</h2>
        <p>
          Dicas de leitura, cenários, idéias, relatos e regras da casa para seu
          RPG de mesa.
        </p>
        <div class="home-page-intro-img">
          <Image src={lion} alt="lion" loading="eager" />
        </div>
        <div class="home-page-aside">
          <aside>
            <h2>Recomendações</h2>
            <nav>
              <ul>
                <li>
                  <a target="_blank" href="https://www.youtube.com/@BanditsKeep"
                    >Bandit's Keep</a
                  >
                </li>
                <li>
                  <a
                    target="_blank"
                    href="https://www.youtube.com/@dmquiral5942">DM Quiral</a
                  >
                </li>
                <li>
                  <a target="_blank" href="https://www.youtube.com/@Earthmote"
                    >Earthmote</a
                  >
                </li>
                <li>
                  <a target="_blank" href="https://www.youtube.com/@LokisLair"
                    >Loki's Lair</a
                  >
                </li>
                <li>
                  <a target="_blank" href="https://www.youtube.com/@Chaoclypse"
                    >Chaoclypse</a
                  >
                </li>
                <li>
                  <a
                    target="_blank"
                    href="https://www.youtube.com/@GeekGamers01">Geek Gamers</a
                  >
                </li>
              </ul>
            </nav>
          </aside>
        </div>
      </section>
    </div>
  </div>
</BaseLayout>
